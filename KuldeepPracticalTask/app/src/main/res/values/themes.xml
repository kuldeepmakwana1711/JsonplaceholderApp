<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KuldeepPracticalTask" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.KuldeepPracticalTask">
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="textView12SspWhiteSemiBold">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="textView15SspWhiteSemiBold">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="textView12SspDarkBlueRegular">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/dark_blue_color</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="textView14SspBlackRegular">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="textView12SspBlackSemiBold">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColor">@color/black_color</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>
</resources>